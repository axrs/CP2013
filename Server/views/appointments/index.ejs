<% include ../header %>
<div class="row-fluid">

    <% include toolbox %>
    <h1>Scheduled Appointments</h1>
</div>
<div class="row-fluid">

    <div id='appCalendar' class="span7">

    </div>
    <div id="eventDescription" class="span5">
        <h2>Booking Details</h2>

        <div id="eventDescriptionHelp" class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <h4>Usage Notes</h4>
            Click on an appointment within the calendar to view associated details.
        </div>
        <dl class="dl-horizontal">
            <dt></dt>
            <dd id="appointmentType"></dd>
            <dt>For</dt>
            <dd id="appointmentContact"></dd>
            <dt>With</dt>
            <dd id="appointmentStaff"></dd>
            <dt>On</dt>
            <dd id="appointmentDate"></dd>
        </dl>
        <div id="eventFormActions" class="row-fluid">
            <form action="/appointments/" method="post" class="form-actions">
                <input type="hidden" name="_method" value="delete"/>
                <button type="submit" value="Delete" class="btn btn-warning pull-right" disabled>Cancel Appointment</button>
            </form>
        </div>
    </div>
</div>
<% include ../footer %>