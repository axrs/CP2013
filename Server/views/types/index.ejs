<% include ../header %>
<div class="row-fluid">
    <% include toolbox %>
    <div class="span7">
        <h1>Appointment Types</h1>
    </div>

    <% if (typeof allModels == 'undefined' || allModels.length == 0) {%>
    <div class="span9">
        <p>There are no appointment types on record.</p>
    </div>
    <%} else {%>
    <div class="span2">
        <p class="text-right">Total: <%- allModels.length %></p>
    </div>

    <div class="span9">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Description</th>
                <th>Duration</th>
                <th style="text-align: right"># of Bookings</th>
                <th></th>
            </tr>
            </thead>
            <% allModels.forEach(function(model){ %>
            <% include table_row %>
            <%}) %>
        </table>
    </div>

    <%} %>
</div>
<% include ../footer %>