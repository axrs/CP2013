<%
var weekdays = new Array(7);
weekdays[0] = "Sunday";
weekdays[1] = "Monday";
weekdays[2] = "Tuesday";
weekdays[3] = "Wednesday";
weekdays[4] = "Thursday";
weekdays[5] = "Friday";
weekdays[6] = "Saturday";

%>
<tr>
    <td><%= weekdays[day] %></td>
    <td class="bootstrap-timepicker">
        <input type="text"
               name="model[servHrs][<%= day %>][servHrsStart]"
               class="timepicker input-small"
               value="<% if(isEditing && model.servHrs[day] && model.servHrs[day].servHrsStart){ %><%= model.servHrs[day].servHrsStart %><% } %>"
                >
    </td>
    <td class="bootstrap-timepicker">
        <input type="text"
               name="model[servHrs][<%= day %>][servHrsBreakStart]"
               class="timepicker input-small"
               value="<% if(isEditing && model.servHrs[day] && model.servHrs[day].servHrsBreakStart){ %><%= model.servHrs[day].servHrsBreakStart %><% } %>"
                >
    </td>
    <td class="bootstrap-timepicker">
        <input type="text"
               name="model[servHrs][<%= day %>][servHrsBreakEnd]"
               class="timepicker input-small"
               value="<% if(isEditing && model.servHrs[day] && model.servHrs[day].servHrsBreakEnd){ %><%= model.servHrs[day].servHrsBreakEnd %><% } %>"
                >
    </td>
    <td class="bootstrap-timepicker">
        <input type="text"
               name="model[servHrs][<%= day %>][servHrsEnd]"
               class="timepicker input-small"
               value="<% if(isEditing && model.servHrs[day] && model.servHrs[day].servHrsEnd){ %><%= model.servHrs[day].servHrsEnd %><% } %>"
                >
    </td>
</tr>