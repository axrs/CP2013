<% include ../header %>
<div class="row-fluid">
    <% include toolbox %>
    <div class="span7">
        <h1>All Contacts</h1>
    </div>

    <% if (allContacts.length == 0) {%>
    <div class="span9">
        <p>There are no contacts on record.</p>
    </div>
    <%} else {%>
    <div class="span2">
        <p class="text-right">Total: <%- allContacts.length %></p>

    </div>
    <div class="span9">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Company</th>
            </tr>
            </thead>
            <% allContacts.forEach(function(model){ %>
            <% include table_row %>
            <%}) %>
        </table>
    </div>
    <%} %>
</div>
<% include ../footer %>